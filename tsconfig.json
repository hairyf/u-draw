{
  "compilerOptions": {
    "target": "ES2015",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "rootDir": "./packages",
    "types": [
      "@dcloudio/types",
      "node",
    ],
    "skipLibCheck": true
  },
  "exclude": [
    "**/__tests__/*.ts",
    "**/__test__/*.ts"
  ],
  "include": [
    "./packages/**/*.ts",
    "./packages/**/*.js",
    "./packages/**/*.d.ts",
  ]
}